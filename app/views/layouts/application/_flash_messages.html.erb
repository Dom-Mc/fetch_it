<% flash.present? %>
  <% flash.each do |flash_type, message| %>

    <div class="<%= flash_class(flash_type) %> fade in">
      <button type="button" class="close" data-dismiss="alert">&times;</button>

      <% if message.is_a?(Array) %>
        <% message.each do |msg| %>
          <%= msg %><br>
        <% end %>
      <% else %>
        <%= message %>
      <% end %>

    </div>
<% end %>
