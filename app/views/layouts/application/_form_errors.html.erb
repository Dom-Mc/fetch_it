<% if object.errors.any? %>
  <div class="error_explanation">
    <h3>
      <%= pluralize(object.errors.count, 'error') %> were found
    </h3>

    <ul class="error_list">
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
