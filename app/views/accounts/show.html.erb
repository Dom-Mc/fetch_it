<h1>Profile</h1>

<h2>Account</h2>
<%= @user_account.account_type %><br>
<%= @user_account.first_name %><br>
<%= @user_account.last_name %><br>
<%= @user_account.company %><br>


<h2>Address</h2>
<% @user_account.addresses.each do |address| %>
  <%= address.address_type %><br>
  <%= address.street_address %><br>
  <%= address.secondary_address %><br>
  <%= address.city %><br>
  <%= address.state %><br>
  <%= address.zip %><br>
  <%= address.country %><br>
<% end %>

<h2>Phone Number</h2>
<% @user_account.phones.each do |phone| %>
  <%= phone.phone_type %><br>
  <%= phone.phone_number %><br>
  <%= phone.ext %><br>
<% end %>
<%= link_to "Edit account", @user_account %>

<h2>Sign In</h2>
<%= @user_account.user.email %><br>
<%= link_to "Edit email/password", edit_user_registration_path %><br>
